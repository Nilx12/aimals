<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Admission_Date</fullName>
    <active>true</active>
    <errorConditionFormula>Date_of_admission__c &gt; TODAY()</errorConditionFormula>
